.contents.row
  .container
    = form_for @post do |f|
      %h3
        投稿する
      = f.text_field :image, placeholder: "Image Url", id: "image"
      = f.text_area :title, placeholder: "title" , rows: "10", id: "title"
      = f.text_area :text, placeholder: "text" , rows: "10", id: "text"
      = f.submit "SEND"
