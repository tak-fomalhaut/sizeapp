.wrapper
  = render "header"
  %content
    .content__box
      .content__details
        = form_for @post do |f|
          %h3
            EDIT
          = f.text_area :title, value: @post.title, id: "title", autofocus: true
          = f.file_field :image, value: @post.image, id: "image"
          = f.text_area :text, value: @post.text, id: "text"
          = f.submit "SEND", id: "send-btn"
      .right-box
        チュートリアル
        .right-box-image
          = image_tag @post.image.url, width: '100%',height:'100%'
          jsで画像URL添付したらイメージが出る
  = render "footer"